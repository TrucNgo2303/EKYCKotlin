<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.document.RegisterInfoFragment">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_action_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register infomation"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_arrow_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_marginLeft="8dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <ScrollView
            app:layout_constraintTop_toBottomOf="@id/cv_action_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_birthday_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Birthday "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/tv_birthday_title"
                    android:text="*"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    android:layout_marginTop="16dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_birthday_day"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:text="XX/XX/XXXX"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_calendar"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv_birthday_day"
                    app:layout_constraintRight_toRightOf="@id/tv_birthday_day"
                    app:layout_constraintBottom_toBottomOf="@id/tv_birthday_day"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/ic_calendar1"
                    />
                <View
                    android:layout_width="220dp"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginRight="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_birthday_day"
                    app:layout_constraintLeft_toLeftOf="@id/tv_birthday_day"
                    app:layout_constraintRight_toRightOf="parent"
                />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_doc_type_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_birthday_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Document Type "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_doc_type_title"
                    app:layout_constraintLeft_toRightOf="@id/tv_doc_type_title"
                    android:text="*"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_doc_type"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_doc_type_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_doc_type_title"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:text="Passport Card"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <View
                    android:layout_width="220dp"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginRight="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_doc_type"
                    app:layout_constraintLeft_toLeftOf="@id/tv_doc_type"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_doc_no_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_doc_type_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Document No "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_doc_no_title"
                    app:layout_constraintLeft_toRightOf="@id/tv_doc_no_title"
                    android:text="*"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_doc_no"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_doc_no_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_doc_no_title"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:text="00000000000"
                    android:textSize="16sp"
                    />
                <View
                    android:layout_width="220dp"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginRight="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_doc_no"
                    app:layout_constraintLeft_toLeftOf="@id/tv_doc_no"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_nationality_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_doc_no_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Nationality "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_nationality_title"
                    app:layout_constraintLeft_toRightOf="@id/tv_nationality_title"
                    android:text="*"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_nationality"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_nationality_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_nationality_title"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:text="Vietnamese"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
                <View
                    android:layout_width="220dp"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginRight="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_nationality"
                    app:layout_constraintLeft_toLeftOf="@id/tv_nationality"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_issuance_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_nationality_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Issuance date "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_issuance_date_title"
                    app:layout_constraintLeft_toRightOf="@id/tv_issuance_date_title"
                    android:text="*"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_issuance_date"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_issuance_date_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_issuance_date_title"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:text="XX/XX/XXXX"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_calendar_issuance_date"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv_issuance_date"
                    app:layout_constraintRight_toRightOf="@id/tv_issuance_date"
                    app:layout_constraintBottom_toBottomOf="@id/tv_issuance_date"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/ic_calendar1"
                    />
                <View
                    android:layout_width="220dp"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginRight="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_issuance_date"
                    app:layout_constraintLeft_toLeftOf="@id/tv_issuance_date"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_issuance_place_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_issuance_date_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Issuance place "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_issuance_place_title"
                    app:layout_constraintLeft_toRightOf="@id/tv_issuance_place_title"
                    android:text="*"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_issuance_place"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_issuance_place_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_issuance_place_title"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:text="Vietnam"
                    android:textSize="16sp"
                    />
                <View
                    android:layout_width="220dp"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginRight="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_issuance_place"
                    app:layout_constraintLeft_toLeftOf="@id/tv_issuance_place"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_expire_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_issuance_place_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Expire date "
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_expire_date_title"
                    app:layout_constraintLeft_toRightOf="@id/tv_expire_date_title"
                    android:text="*"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_expire_date"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_expire_date_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_expire_date_title"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"
                    android:text="XX/XX/XXXX"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_calendar_expire_date"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv_expire_date"
                    app:layout_constraintRight_toRightOf="@id/tv_expire_date"
                    app:layout_constraintBottom_toBottomOf="@id/tv_expire_date"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/ic_calendar1"
                    />
                <View
                    android:layout_width="220dp"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_marginRight="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_expire_date"
                    app:layout_constraintLeft_toLeftOf="@id/tv_expire_date"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_upload_photo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_expire_date_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="Upload photo "
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_upload_photo_title"
                    app:layout_constraintLeft_toRightOf="@id/tv_upload_photo_title"
                    android:text="*"
                    android:textSize="16sp"
                    android:textColor="@color/red"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_front_side"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_photo_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintWidth_percent="0.45"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_good_front_side"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_tick"
                    app:layout_constraintTop_toTopOf="@id/img_front_side"
                    app:layout_constraintRight_toRightOf="@id/img_front_side"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_front_side"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Front side"
                    android:textSize="16sp"
                    android:textColor="@color/green_light"
                    app:layout_constraintTop_toBottomOf="@id/img_front_side"
                    app:layout_constraintLeft_toLeftOf="@id/img_front_side"
                    app:layout_constraintRight_toRightOf="@id/img_front_side"
                    android:layout_marginTop="8dp"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_back_side"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_upload_photo_title"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintWidth_percent="0.45"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="8dp"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_good_back_side"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_tick"
                    app:layout_constraintTop_toTopOf="@id/img_back_side"
                    app:layout_constraintRight_toRightOf="@id/img_back_side"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_back_side"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back side"
                    android:textSize="16sp"
                    android:textColor="@color/green_light"
                    app:layout_constraintTop_toBottomOf="@id/img_back_side"
                    app:layout_constraintLeft_toLeftOf="@id/img_back_side"
                    app:layout_constraintRight_toRightOf="@id/img_back_side"
                    android:layout_marginTop="8dp"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_portrait"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_front_side"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintWidth_percent="0.45"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_good_portrait_side"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_tick"
                    app:layout_constraintTop_toTopOf="@id/img_portrait"
                    app:layout_constraintRight_toRightOf="@id/img_portrait"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_portrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Portrait"
                    android:textSize="16sp"
                    android:textColor="@color/green_light"
                    app:layout_constraintTop_toBottomOf="@id/img_portrait"
                    app:layout_constraintLeft_toLeftOf="@id/img_portrait"
                    app:layout_constraintRight_toRightOf="@id/img_portrait"
                    android:layout_marginTop="8dp"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_with_pn"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_back_side"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintWidth_percent="0.45"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="8dp"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_good_pn_side"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_tick"
                    app:layout_constraintTop_toTopOf="@id/img_with_pn"
                    app:layout_constraintRight_toRightOf="@id/img_with_pn"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_with_pn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With phone number"
                    android:textSize="16sp"
                    android:textColor="@color/green_light"
                    app:layout_constraintTop_toBottomOf="@id/img_with_pn"
                    app:layout_constraintLeft_toLeftOf="@id/img_with_pn"
                    app:layout_constraintRight_toRightOf="@id/img_with_pn"
                    android:layout_marginTop="8dp"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_import_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_with_pn"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_margin="16dp"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_import_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/btn_import_image"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:text="Second SIM document from ARCT"
                    android:textSize="16sp"
                    android:textColor="@color/green_light"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:paddingBottom="100dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>