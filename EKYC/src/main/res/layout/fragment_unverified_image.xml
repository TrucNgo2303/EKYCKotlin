<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.document.UnverifiedImageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_action_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Document confirmation"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_arrow_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/ic_arrow_back"
                    android:layout_marginLeft="8dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_front_side"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@id/cv_action_bar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_percent="0.45"
            android:background="@color/white"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_fail_front_side"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close_doc"
            app:layout_constraintTop_toTopOf="@id/img_front_side"
            app:layout_constraintRight_toRightOf="@id/img_front_side"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_good_front_side"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_tick"
            app:layout_constraintTop_toTopOf="@id/img_front_side"
            app:layout_constraintRight_toRightOf="@id/img_front_side"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_front_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Front side"
            android:textSize="16sp"
            android:textColor="@color/green_light"
            app:layout_constraintTop_toBottomOf="@id/img_front_side"
            app:layout_constraintLeft_toLeftOf="@id/img_front_side"
            app:layout_constraintRight_toRightOf="@id/img_front_side"
            android:layout_marginTop="8dp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_back_side"
            android:layout_width="0dp"
            android:layout_height="130dp"
            app:layout_constraintTop_toBottomOf="@id/cv_action_bar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.45"
            android:background="@color/white"
            android:layout_marginTop="32dp"
            android:layout_marginRight="8dp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_fail_back_side"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close_doc"
            app:layout_constraintTop_toTopOf="@id/img_back_side"
            app:layout_constraintRight_toRightOf="@id/img_back_side"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_good_back_side"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_tick"
            app:layout_constraintTop_toTopOf="@id/img_back_side"
            app:layout_constraintRight_toRightOf="@id/img_back_side"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_back_side"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back side"
            android:textSize="16sp"
            android:textColor="@color/green_light"
            app:layout_constraintTop_toBottomOf="@id/img_back_side"
            app:layout_constraintLeft_toLeftOf="@id/img_back_side"
            app:layout_constraintRight_toRightOf="@id/img_back_side"
            android:layout_marginTop="8dp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_portrait"
            android:layout_width="0dp"
            android:layout_height="130dp"
            app:layout_constraintTop_toBottomOf="@id/tv_front_side"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintWidth_percent="0.45"
            android:background="@color/white"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_retake_portrait"
            android:layout_width="180dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="@id/img_portrait"
            app:layout_constraintLeft_toLeftOf="@id/img_portrait"
            app:layout_constraintRight_toRightOf="@id/img_portrait"
            android:background="@drawable/button_retake_doc"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_fail_portrait_side"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close_doc"
            app:layout_constraintTop_toTopOf="@id/img_portrait"
            app:layout_constraintRight_toRightOf="@id/img_portrait"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_good_portrait_side"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_tick"
            app:layout_constraintTop_toTopOf="@id/img_portrait"
            app:layout_constraintRight_toRightOf="@id/img_portrait"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_portrait"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portrait"
            android:textSize="16sp"
            android:textColor="@color/green_light"
            app:layout_constraintTop_toBottomOf="@id/img_portrait"
            app:layout_constraintLeft_toLeftOf="@id/img_portrait"
            app:layout_constraintRight_toRightOf="@id/img_portrait"
            android:layout_marginTop="8dp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_with_pn"
            android:layout_width="0dp"
            android:layout_height="130dp"
            app:layout_constraintTop_toBottomOf="@id/tv_back_side"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.45"
            android:background="@color/white"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_fail_pn_side"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_close_doc"
            app:layout_constraintTop_toTopOf="@id/img_with_pn"
            app:layout_constraintRight_toRightOf="@id/img_with_pn"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_good_pn_side"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_tick"
            app:layout_constraintTop_toTopOf="@id/img_with_pn"
            app:layout_constraintRight_toRightOf="@id/img_with_pn"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_with_pn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With phone number"
            android:textSize="16sp"
            android:textColor="@color/green_light"
            app:layout_constraintTop_toBottomOf="@id/img_with_pn"
            app:layout_constraintLeft_toLeftOf="@id/img_with_pn"
            app:layout_constraintRight_toRightOf="@id/img_with_pn"
            android:layout_marginTop="8dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_retry_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/button_retry_all"
            android:text="Retry all"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/red"
            android:padding="12dp"
            android:layout_margin="16dp"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_continue_true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/button_background_green"
            android:text="Continue"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_margin="16dp"

            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_continue_fail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/btn_retry_all"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/button_continue"
            android:text="Continue"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_margin="16dp"
            android:visibility="gone"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unverified_image"
            android:textSize="16sp"
            android:textColor="@color/red"
            app:layout_constraintBottom_toTopOf="@id/btn_continue_fail"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="32dp"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>